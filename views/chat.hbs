
	<script src="/socket.io/socket.io.js"></script>

<input type="text" name="message" id="msg" style="border: hidden;"><button onclick="sendData()" >send</button>
<script type="text/javascript">
	var socket = io('http://172.30.90.69:3000',{transports: ['websocket'], upgrade: false});
	var message;
	function sendData() {
   	message={"msgs":document.getElementById('msg').value,
   			"user":"{{username}}"
   		};
   	document.getElementById('msg').value="";
    socket.emit("chatData", message);
}

	socket.on('mssg',function(data){
	var div = document.createElement("div");
	div.className="chat";
	div.innerHTML = "<h4>"+data.user+"</h4>"+data.msgs;

	document.body.appendChild(div);
	

	});
</script>
